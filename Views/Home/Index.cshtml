@{
    ViewData["Title"] = "Home Page";
}

@model Activity3.Models.Form

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="display-4">Love and Deepspace Fan Website</h1>
            <p>A fan-made website built using C# MVC to explore front-end development.</p>
            <button type="button" class="btn btn-primary">Explore Characters</button>
        </div>
        <div class="col">INSERT IMAGE</div>
    </div>
</div>

<form asp-action="FanInteractionForm" asp-controller="Home">

    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input class="form-control" type="text" placeholder="Zayne_simp" asp-for="Name" />
    </div>

    <div class="mb-3">
        <label for="Character" class="form-label">Favorite Character</label>
        <select id="inputState" class="form-select" asp-for="Character">
            <option selected>choose...</option>
            <option value="Xavier">Xavier</option>
            <option value="Zayne">Zayne</option>
            <option value="Rafayel">Rafayel</option>
            <option value="Sylus">Sylus</option>
            <option value="Caleb">Caleb</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="MessageText" class="form-label">Why do you like this character?</label>
        <textarea class="form-control" rows="3" asp-for="MessageText"></textarea>
    </div>


    <div class="mb-3">
        <label class="form-label">Rating (1 - lowest, 5 - highest)</label>
        <div class="container">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" asp-for="Rating">
                <label class="form-check-label" for="inlineRadio1">1</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2" asp-for="Rating">
                <label class="form-check-label" for="inlineRadio2">2</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3" asp-for="Rating">
                <label class="form-check-label" for="inlineRadio3">3</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="option4" asp-for="Rating">
                <label class="form-check-label" for="inlineRadio2">4</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="option5" asp-for="Rating">
                <label class="form-check-label" for="inlineRadio5">5</label>
            </div>
        </div>
    </div>



    <button class="btn btn-primary mt-4" type="submit"> Submit </button>
</form>
